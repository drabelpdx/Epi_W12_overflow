<h1><%= @question.question %></h1>

<h3><%= @question.body %></h3>

<h4>Asked by: <%= @question.user.email %></h4>

<%= link_to "Add answer", new_question_answer_path(@question, @answer) %>

<% if @question.user_id == current_user.id %>
  <%= link_to "Edit Question", edit_user_question_path(@user, @question) %>
  <%= link_to "Delete Question", user_question_path(@user, @question),
                                  :data => {:confirm => "Are you sure?",
                                            :method => 'delete'}%>
<% end %>

<ul>
  <% @question.answers.each do |answer| %>
    <li><%= answer.answer %> -- <small><%= answer.user.email %></small>
    </li>
    <hr>
  <% end %>
</ul>
